
<div class="box panel panel-danger">
      <div class="panel-heading">
    	<h3 class="panel-title"><%= @pin.description %></h3>
  	  </div>
      <div class="panel-body panel-desc">
      	  <%= image_tag @pin.image.url(:medium) %>
          <%= @pin.user.name %>
          <% if @pin.user == current_user && current_user.present? %>
            <%= link_to '', @pin, class: "glyphicon glyphicon-trash pin-delete pull-right", method: :delete, data: { confirm: 'Are you sure you want to delete this pin?' } %>
            <%= link_to edit_pin_path(@pin) do %>
              <span class="glyphicon glyphicon-edit pin-edit pull-right" data-toggle="tooltip" data-placement="top" title="Edit"></span>
            <% end %>
          <% end %>
      </div>
</div>
	<%= link_to 'Back', pins_path %>