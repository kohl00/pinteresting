
<%= render 'pages/home' if !user_signed_in? %>
<h1>Listing pins</h1>

<div id="pins" class="transitions-enabled col-md-12">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium)), pin %>
      <% if signed_in? %>
        <span id="<%= pin.id %>_liked"><%= render partial: 'pins/likes/like', locals: { pin: pin} %></span>
      <% end %>
      <div class="panel-body panel-desc">
          <%= pin.description %> |
          <%= pin.user.name %>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>