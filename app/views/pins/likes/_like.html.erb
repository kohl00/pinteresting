<% if current_user.likes?(pin) %>
	<%= link_to "", pin_like_path(pin), method: :delete, class: "fa fa-pinterest-p like #{'disabled' if pin.user == current_user}", remote: true %>
<% else %>
	<%= link_to "", pin_like_path(pin), method: :post, class: "fa fa-pinterest-p #{'disabled' if pin.user == current_user} ", remote: true %>
<% end %>
